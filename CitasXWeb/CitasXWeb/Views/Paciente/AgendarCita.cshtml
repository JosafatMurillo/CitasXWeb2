@{
    ViewData["Title"] = "Registrar paciente";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="margin-top:30px;">
                <header class="card-header">
                    <h4 class="card-title mt-2">Registro de cita</h4>
                </header>
                <article class="card-body">
                    <form class="centered" method="post">
                        <div class="col form-group">
                            <label>Nombre: </label>
                            <input type="text" name="nombre" class="form-control" placeholder="">
                        </div>
                        <div class="col form-group">
                            <label>CURP </label>
                            <input type="text" name="curp" class="form-control" placeholder="">
                        </div>
                        <div class="col form-group">
                            <label>Fecha de la próxima cita: </label>
                            <input id="datetimepicker" type="date" name="proximaCita" class="form-control">
                            <script type="text/javascript">
                                $(function () {
                                    $('#datetimepicker').datetimepicker();
                                });
                            </script>
                        </div>
                        <div class="col form-group">
                            <label>Hora: </label>
                            <br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario1" value="masc">
                                <label class="form-check-label" for="horario">Masculino</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario2" value="femenino">
                                <label class="form-check-label" for="horario">Femenino</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario3" value="femenino">
                                <label class="form-check-label" for="horario">Femenino</label>
                            </div>
                            <br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario4" value="masc">
                                <label class="form-check-label" for="horario">Masculino</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario5" value="femenino">
                                <label class="form-check-label" for="horario">Femenino</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario6" value="femenino">
                                <label class="form-check-label" for="horario">Femenino</label>
                            </div>
                            <br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario7" value="masc">
                                <label class="form-check-label" for="horario">Masculino</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario8" value="femenino">
                                <label class="form-check-label" for="horario">Femenino</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="horario" id="horario9" value="femenino">
                                <label class="form-check-label" for="horario">Femenino</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Registarse  </button>
                        </div>
                    </form>
                </article>
            </div>
        </div>
    </div>
</div>
